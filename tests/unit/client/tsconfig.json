{
    "extends": "./../../../src/client/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~client/*": [
                "./*",
                "./../../../src/client/*"
            ],
            "~common/*": [
                "./../../../src/common/*",
                "./../common/*"
            ],
            "~env/*": [
                "./*",
                "./../../../src/client/*"
            ],
            "~test/*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "transform": "./dev/transformers/TypeReflectionTransformer.ts",
                "environment": "test",
                "subEnvironment": "client"
            }
        ]
    },
    "include": [
        "../../../src/client/**/*.ts",
        "../../../src/client/**/*.d.ts",
        "../../../src/client/**/*.tsx",
        "../../../src/client/**/*.vue",
        "../../../src/common/**/*.ts",
        "../../../src/common/**/*.d.ts",
        "../../../src/common/**/*.tsx",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./../common/**/*.ts",
        "./../common/**/*.d.ts",
        "./../common/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
