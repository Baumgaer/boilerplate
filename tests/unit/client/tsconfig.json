{
    "extends": "./../../../src/client/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~client/*": [
                "./*",
                "./../../../src/client/*"
            ],
            "~common/*": [
                "./../common/*",
                "./../../../src/common/*"
            ],
            "~env/*": [
                "./*",
                "./../../../src/client/*"
            ],
            "~test/*": [
                "./../*"
            ],
            "~test/env/*": [
                "./*"
            ],
            "~src/*": [
                "./../../../src/*"
            ],
            "~src/env/*": [
                "./../../../src/client/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transformer-boilerplate",
                "tsConfigPath": "./tests/unit/client/tsconfig.json",
                "environment": "client"
            }
        ]
    },
    "include": [
        "../../../src/client/**/*.ts",
        "../../../src/client/**/*.d.ts",
        "../../../src/client/**/*.tsx",
        "../../../src/client/**/*.vue",
        "../../../src/common/**/*.ts",
        "../../../src/common/**/*.d.ts",
        "../../../src/common/**/*.tsx",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./../common/**/*.ts",
        "./../common/**/*.d.ts",
        "./../common/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
