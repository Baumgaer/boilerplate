{
    "extends": "./../../../src/client/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~client/*": [
                "./../../../src/client/*",
                "./*"
            ],
            "~common/*": [
                "./../../../src/common/*"
            ],
            "~env/*": [
                "./../../../src/client/*",
                "./*"
            ],
            "~test/*": [
                "./*"
            ]
        }
    },
    "include": [
        "../../../src/client/**/*.ts",
        "../../../src/client/**/*.tsx",
        "../../../src/client/**/*.vue",
        "../../../src/common/**/*.ts",
        "../../../src/common/**/*.tsx",
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./../common/**/*.ts",
        "./../common/**/*.tsx"
    ]
}