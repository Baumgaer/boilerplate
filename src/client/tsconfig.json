{
    "extends": "./../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~client/*": [
                "./*"
            ],
            "~common/*": [
                "./../common/*"
            ],
            "~env/*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "transform": "./dev/typescript-transformer-boilerplate/src/index.ts",
                "tsConfigPath": "./src/client/tsconfig.json",
                "environment": "client"
            }
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./../common/**/*.ts",
        "./../common/**/*.tsx"
    ]
}
