{
    "extends": "./../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~client/*": [
                "./*"
            ],
            "~common/*": [
                "./../common/*"
            ],
            "~env/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./../common/**/*.ts",
        "./../common/**/*.tsx"
    ]
}