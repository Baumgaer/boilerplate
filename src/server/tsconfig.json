{
    "extends": "./../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~server/*": [
                "./*"
            ],
            "~common/*": [
                "./../common/*"
            ],
            "~env/*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transformer-boilerplate",
                "tsConfigPath": "./src/server/tsconfig.json",
                "environment": "server"
            }
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./../common/**/*.ts",
        "./../common/**/*.tsx"
    ]
}
